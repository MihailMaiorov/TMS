<div id="<%= dom_id book %>">
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>
  <br />
  <div>
    <% if book.image.content_type.in?(%w[image/jpeg image/png]) %>
      <%= link_to image_tag(book.image.variant(resize_to_limit: [300, 300])), book.image if book.image.attached? %>
    <% end %>
  <div/>

  <div>
    <% book.pictures.each do |picture| %>
      <%= link_to image_tag(picture.variant(resize_to_limit: [150, 150])), picture %>
    <% end %>
  <div/>
</div>
